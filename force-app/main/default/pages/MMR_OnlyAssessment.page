<apex:page showHeader="false" sidebar="false" controller="MMR_OnlyAssessment" action="{!Setup_Opp}">
<head>
    <c:MMR_PageHeader ></c:MMR_PageHeader>
</head>
<body style="background-color:#ededed;">
  
  <style> .q1show{display:none;}.q2show{display:none;}</style>
  
  <c:MMR_Header title="Execution Only Assessment" opp="{!bopp}"/>

      <div class="container">
   
  
  
      
           
        <apex:form id="aForm" styleClass="form-horizontal">
            <div class="form-group">
                <label for="q1" class="col-sm-6 control-label">Has the customer prompted for execution only?</label>
                <div class="col-sm-3">
                    <apex:inputField id="q1" value="{!Opp.Customer_prompt_for_execution_only__c}" styleClass="form-control" required="true"/>                    
                </div>
            </div>   
            
            <div class="form-group q1show">
                <label for="q2" class="col-sm-6 control-label">Is the main purpose of the HPP, Debt Consolidation?</label>
                <div class="col-sm-3">
                    <apex:inputField id="q2select" value="{!Opp.Debt_Consolidation_main_purpose__c}" styleClass="form-control"/>                    
                </div>
            </div> 
            
            <div class="form-group q1showa" id="mortgage_professional">
                <label  for="q1" class="col-sm-6 control-label">Has any applicant ever been a mortgage professional for a period exceeding 12 months?</label>
                <div class="col-sm-3">
                    <apex:inputField value="{!Opp.Mortgage_professional__c}" styleClass="form-control q2"/>                    
                </div>
            </div> 
            
            <div class="form-group q1showa" id="income_exceed">
                <label for="q1" class="col-sm-6 control-label">Does any applicant’s income exceed £300,000 net per annum?</label>
                <div class="col-sm-3">
                    <apex:inputField value="{!Opp.Income_exceed_300k__c}" styleClass="form-control q2"/>                    
                </div>
            </div> 
            
            <div class="form-group q1showa" id="netassets">
                <label for="q1" class="col-sm-6 control-label">Does any applicant have net assets of over £3m?</label>
                <div class="col-sm-3">
                    <apex:inputField value="{!Opp.Assets_over_3m__c}" styleClass="form-control q2"/>                    
                </div>
            </div> 
            
           
            <div class="form-group eligible">
            <div class="panel panel-danger">
                <div class="panel-body">
                <div class="col-sm-12">
                Based on the information you have supplied, you are not eligible to undertake the execution only process
                </div>
                </div>
            </div>
            </div>
            
             
                   
            
          
            
            
            
            
            <div class="form-group q2show">
                <label for="q1" class="col-sm-6 control-label">Reason for execution only</label>
                <div class="col-sm-3">
                    <apex:inputField value="{!Opp.Execution_Only_Reason__c}" styleClass="form-control"/>                    
                </div>
            </div> 
            
            <div class="form-group q2show">
                <label for="q1" class="col-sm-6 control-label">Would you require advice on choosing a HPP product</label>
                <div class="col-sm-3">
                    <apex:inputField value="{!Opp.Require_advice__c}" styleClass="form-control"/>                    
                </div>
            </div>                         
            <div class="row col-sm-offset-6">
            <apex:commandButton styleClass="btn btn-danger" action="{!Next}" value="Next"/>
            </div>
                     
        </apex:form>        
    </div>
    
    <c:MMR_PageFooter ></c:MMR_PageFooter>
    <script>
        function RunQ1()
        {
                var val = $("[id$='q1']").val();                
                if(val == 'Yes')
                {
                    $(".q1show").show();
                    $(".q1showa").hide();
                    $('.eligible').hide()
                    RunQ2();
                }
                else
                {
                    $('.q1show').hide();
                    $('.q2show').hide();
                    $('.q1showa').hide();
                    $('.eligible').hide();
                }  
                
                
        }
        
        function RunQ2()
        {
            var val = $("[id$='q2select']").val();
            if(val == 'Yes')
            {
               $('.q1showa').hide();
                $('.eligible').show();
                $('.q2show').hide();
            }
            else if(val == 'No')
            {   
                 $('.q1showa').show();
                $('.eligible').hide();
                $('.q2show').hide();
                RunQ3();
            }
            else
            {
                $('.q2show').hide();
                $('.q1showa').hide();
                $('.eligible').hide();
            }
        
        }
        
        
        function RunQ3()
        {
                var allNo = true;
        
                var foundYes = false;                
                $('.q2').each(function (index){
                    if($(this).val() == 'Yes')
                    {
                        foundYes = true;                       
                    }
                    
                    if($(this).val() != 'No'){
                        allNo = false;
                    }                    
                    
                });
                              
                if(foundYes )
                {
                    $(".q2show").show();
                    //$(".q1showa").hide();
                }
                else
                {
                    $('.q2show').hide();
                    //$(".q1showa").show();
                } 
                
                    if(allNo)
                    {
                        $('.eligible').show();
                    }
                    else
                    {
                        $('.eligible').hide();
                    }
        }
    
        $(function(){
            $("[id$='q1']").change(RunQ1);            
            $("[id$='q2select']").change(RunQ2);
            $('.q2').change(RunQ3);
            
            RunQ1();
                       
                   
            $("#mortgage_professional").popover({
                trigger: 'hover',              
                content: 'An applicant has to have completed at least 12 months mortgage advice within the last 10 years.',               
                container: 'body',
                placement: 'top'
              
            });
            $("#income_exceed").popover({
                trigger: 'hover',              
                content: 'Total net income to include all salary components including basic salary, bonus, overtime, pension,  etc.',               
                container: 'body',
                placement: 'top'
              
            });
            $("#netassets").popover({
                trigger: 'hover',              
                content: 'Net assets can include any asset of the customer such as savings, houses, cars, artwork, shares, etc.',             
                container: 'body',
                placement: 'top'
              
            });
        });
    
    </script>
    
</body>

</apex:page>