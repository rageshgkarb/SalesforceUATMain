            <li class="your-progress-complete">1</li> 
            <li class="your-progress-complete">2</li>    
            <li class="your-progress-complete">3</li>    
            <li class="your-progress-active">4</li>
            <li class="your-progress-next">5</li>  
        </ul>
        </div>
        <div class="your-progress-desc">
        <!--C0750: CAA Quick Wins Starts-->
            <p>Stage 4 <span style="color:rgb(179,153,93)">(of 5)</span></p>       
        <!--C0750: CAA Quick Wins Ends-->    
        </div>     
    </apex:outputPanel> 

